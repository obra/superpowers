{
  "name": "the-rookie-ethics",
  "version": "1.0.0",
  "description": "An ethical puzzle game inspired by The Rookie TV series",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:dmg": "electron-builder --mac dmg",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Ethics Game Studio",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.ethicsgame.therookieethics",
    "productName": "The Rookie Ethics",
    "mac": {
      "category": "public.app-category.games",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "title": "The Rookie Ethics",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "**/*",
      "!**/*.md"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
